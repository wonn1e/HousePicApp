<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/cancel_findpw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingBottom="11dp"
        android:paddingLeft="11dp"
        android:src="@drawable/ic_popover_x" />

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_shape"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@drawable/popup_shape"
            android:gravity="center_vertical"
            android:paddingLeft="19dp"
            android:text="비밀번호 찾기"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:textSize="17sp"
            android:typeface="sans" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="0.5dp"
            android:background="#20000000"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:background="#ffffff"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/editvoxt_outside"
                        android:orientation="vertical"
                        android:padding="0.5dp" >

                        <EditText
                            android:id="@+id/emailForLostPW"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/editbox_inside"
                            android:ems="10"
                            android:hint="이메일을 입력해주세요."
                            android:inputType="text"
                            android:paddingBottom="13dp"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:paddingTop="13dp"
                            android:singleLine="true"
                            android:textSize="16sp"
                            android:typeface="sans" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/edit_pw"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/blue_btn"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:text="완료"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:textStyle="bold"
            android:typeface="sans" />

    </LinearLayout>

</LinearLayout>
