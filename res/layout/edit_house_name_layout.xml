<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/cancel_housename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingBottom="11dp"
        android:paddingLeft="11dp"
        android:src="@drawable/ic_popover_x" />

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_shape"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/popup_shape"
            android:padding="19dp"
            android:text="집 이름 변경"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textSize="17sp"
            android:typeface="sans" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="0.5dp"
            android:background="#20000000"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:background="@drawable/editvoxt_outside"
                    android:orientation="vertical"
                    android:padding="0.5dp" >

                    <EditText
                        android:id="@+id/edit_housename"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/editbox_inside"
                        android:ems="10"
                        android:hint="집 이름을 적어주세요. (12자 이내)"
                        android:paddingBottom="13dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="13dp"
                        android:textColor="#000000"
                        android:textColorHint="#30000000"
                        android:textSize="17sp"
                        android:typeface="sans" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/name_changed_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/blue_btn"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:text="변경하기"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:typeface="sans" />

    </LinearLayout>

</LinearLayout>