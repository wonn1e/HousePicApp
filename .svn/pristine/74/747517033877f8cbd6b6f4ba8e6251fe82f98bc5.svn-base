<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="242dp" >

                <ImageView
                    android:id="@+id/newHouseImg"
                    android:layout_width="match_parent"
                    android:layout_height="194dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_addroom_default" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="66dp"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/text_editHouse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="6dp"
                        android:text="집 이미지를 추가해주세요."
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#ffffff"
                        android:textSize="14sp"
                        android:typeface="sans" />
                </LinearLayout>
                 <ImageView
                    android:id="@+id/myImg_whiteLine"
                    android:layout_width="108dp"
                    android:layout_height="110.5dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="129.5dp"
                    android:src="@drawable/img_mypage_stroke" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="106dp"
                    android:layout_marginTop="131.5dp"
                    android:orientation="vertical" >

                    <com.tacademy.penthouse.house.ImageViewRounded
                        android:id="@+id/newProfilePic"
                        android:layout_width="106dp"
                        android:layout_height="106dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/img_mypage_default" />

                </LinearLayout>
            </FrameLayout>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="14dp"
                android:imeOptions="actionDone"
                android:text="닉네임"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#50000000"
                android:textSize="15sp"
                android:typeface="sans" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/editvoxt_outside"
                android:orientation="vertical"
                android:padding="0.5dp" >

                <EditText
                    android:id="@+id/getUserNickname"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="#f7f7f7"
                    android:ems="10"
                    android:hint="10자 이내로 입력하세요."
                    android:imeOptions="actionDone"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textColorHint="#30000000"
                    android:textSize="17sp"
                    android:typeface="sans" />

            </LinearLayout>
            
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="14dp"
                android:imeOptions="actionDone"
                android:text="집 이름"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#50000000"
                android:textSize="15sp"
                android:typeface="sans" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/editvoxt_outside"
                android:orientation="vertical"
                android:padding="0.5dp" >

                <EditText
                    android:id="@+id/getHouseName"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="#f7f7f7"
                    android:ems="10"
                    android:hint="12자 이내로 입력하세요."
                    android:imeOptions="actionDone"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textColorHint="#30000000"
                    android:textSize="17sp"
                    android:typeface="sans" />

            </LinearLayout>
            
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="14dp"
                android:imeOptions="actionDone"
                android:text="집 소개"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#50000000"
                android:textSize="15sp"
                android:typeface="sans" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/editvoxt_outside"
                android:orientation="vertical"
                android:padding="0.5dp" >

                <EditText
                    android:id="@+id/getHouseIntro"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="#f7f7f7"
                    android:ems="10"
                    android:hint="50자 이내로 입력하세요."
                    android:imeOptions="actionDone"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textColorHint="#30000000"
                    android:textSize="17sp"
                    android:typeface="sans" />

            </LinearLayout>

            <Button
                android:id="@+id/edit_house_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="25dp"
                android:focusable="false"
                android:text="수정완료"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:typeface="sans" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>